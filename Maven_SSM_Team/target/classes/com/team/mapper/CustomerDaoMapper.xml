<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CustomerDaoMapper">
	<sql id="customertable">
		T_CUSTOMER
	</sql>
	<sql id="customerkey">
		CID,
		ADDRESS,
		CNAME,
		CPWD,
		SEX,
		PHONE
	</sql>
	<sql id="customervalue">
		#{cid},
		#{address},
		#{cname},
		#{cpwd},
		#{sex},
		#{phone}
	</sql>
	<!-- 查询全部 -->
	<select id="query" parameterType="com.team.customer.entity.Customer"
		resultType="map">
		select <![CDATA[Rownum rown]]>,
		<include refid="customerkey"></include>
		from
		<include refid="customertable"></include>
	</select>
	<!-- 条件查询 -->
	<select id="queryBy" parameterType="map"
		resultType="map">
		select <![CDATA[ROWNUM rown]]>,
		<include refid="customerkey"></include>
		from
		<include refid="customertable"></include>
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="customer.cid!=null">
			AND	CID=#{customer.cid,jdbcType=VARCHAR}
			</if>
			<if test="customer.cname!=null">
			AND	CNAME=#{customer.cname,jdbcType=VARCHAR}
			</if>
			<if test="customer.cpwd!=null">
			AND	CPWD=#{customer.cpwd,jdbcType=VARCHAR}
			</if>
			<if test="customer.phone!=null">
			AND	PHONE=#{customer.phone,jdbcType=VARCHAR}
			</if>
		</trim>
	</select>
	<!-- 添加 -->
	<insert id="insert" parameterType="com.team.customer.entity.Customer">
		<selectKey resultType="java.lang.String" order="BEFORE"
			keyProperty="cid">
			select sys_guid() from dual
		</selectKey>
		insert into
		<include refid="customertable"></include>
		values(
		#{cid,jdbcType=VARCHAR},#{address,jdbcType=VARCHAR},#{cname,jdbcType=VARCHAR},#{cpwd,jdbcType=VARCHAR},#{sex,jdbcType=VARCHAR},#{phone,jdbcType=VARCHAR}
		)
	</insert>
	<!-- 修改 -->
	<update id="update" parameterType="com.team.customer.entity.Customer">
		update
		<include refid="customertable"></include>
		<trim prefix="set" prefixOverrides=",">
			<if test="cpwd!=null">
				,CPWD=#{cpwd,jdbcType=VARCHAR}
			</if>
			<if test="phone!=null">
				,PHONE=#{phone,jdbcType=VARCHAR}
			</if>
			<if test="address!=null">
				,ADDRESS=#{address,jdbcType=VARCHAR}
			</if>
			<if test="sex!=null">
				,SEX=#{sex,jdbcType=VARCHAR}
			</if>
			<if test="cname!=null">
				,CNAME=#{cname,jdbcType=VARCHAR}
			</if>
		</trim>
		<where>
			CID=#{cid,jdbcType=VARCHAR}
		</where>
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="com.team.customer.entity.Customer">
		delete from
		<include refid="customertable"></include>
		<where>
			<if test="cid!=null">
				CID=#{cid,jdbcType=VARCHAR}
			</if>
		</where>
	</delete>
</mapper>