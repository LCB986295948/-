<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="T_User_RoleDaoMapper">
	<sql id="t_user_roletable">
		T_USER_ROLE
	</sql>
	<sql id="t_user_rolekey">
		URID,
		USERID,
		RID
	</sql>
	<sql id="t_user_rolevalue">
		#{urid},
		#{userid},
		#{rid}
	</sql>
	<!-- 查询全部 -->
	<select id="query" parameterType="com.team.t_user_role.entity.T_User_Role"
		resultType="map">
		select <![CDATA[Rownum rown]]>,
		<include refid="t_user_rolekey"></include>
		from
		<include refid="t_user_roletable"></include>
	</select>
	<!-- 条件查询 -->
	<select id="queryBy" parameterType="com.team.t_user_role.entity.T_User_Role"
		resultType="map">
		select <![CDATA[ROWNUM rown]]>,
		<include refid="t_user_rolekey"></include>
		from
		<include refid="t_user_roletable"></include>
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="urid!=null">
				URID=#{urid,jdbcType=VARCHAR}
			</if>
			<if test="userid!=null">
				USERID=#{userid,jdbcType=VARCHAR}
			</if>
			<if test="rid!=null">
				RID=#{rid,jdbcType=VARCHAR}
			</if>
		</trim>
	</select>
	<!-- 添加 -->
	<insert id="insert" parameterType="com.team.t_user_role.entity.T_User_Role">
		<selectKey resultType="java.lang.Integer" order="BEFORE"
			keyProperty="urid">
			select sys_guid() from dual
		</selectKey>
		insert into
		<include refid="t_user_roletable"></include>
		values(
		<include refid="t_user_rolevalue"></include>
		);
	</insert>
	<!-- 修改 -->
	<update id="update" parameterType="com.team.t_user_role.entity.T_User_Role">
		update
		<include refid="t_user_roletable"></include>
		<trim prefix="set" prefixOverrides=",">
			<if test="userid!=null">
				USERID=#{userid,jdbcType=VARCHAR},
			</if>
			<if test="rid!=null">
				RID=#{rid,jdbcType=VARCHAR}
			</if>
		</trim>
		<where>
			URID=#{urid,jdbcType=VARCHAR}
		</where>
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="com.team.t_user_role.entity.T_User_Role">
		delete from
		<include refid="t_user_roletable"></include>
		<where>
			<if test="urid!=null">
				URID=#{urid,jdbcType=VARCHAR}
			</if>
		</where>
	</delete>
</mapper>