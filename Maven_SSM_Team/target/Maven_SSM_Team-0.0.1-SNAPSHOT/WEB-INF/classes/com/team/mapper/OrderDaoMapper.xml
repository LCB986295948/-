<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="OrderDaoMapper">
	<sql id="ordertable">
		T_ORDER
	</sql>
	<sql id="orderkey">
		ORDERID,
		ADDRESS,
		TIME,
		STATE,
		ODESCIRBE,
		USERID,
		CID
	</sql>
	<sql id="ordervalue">
		#{orderid},
		#{address},
		#{time},
		#{state},
		#{odescirbe},
		#{userid},
		#{cid}
	</sql>
	<!-- 查询全部 -->
	<select id="query" parameterType="com.team.order.entity.Order"
		resultType="map">
		select <![CDATA[Rownum rown]]>,
		<include refid="orderkey"></include>
		from
		<include refid="ordertable"></include>
	</select>
	<!-- 条件查询 -->
	<select id="queryBy" parameterType="com.team.order.entity.Order"
		resultType="map">
		select <![CDATA[ROWNUM rown]]>,
		<include refid="orderkey"></include>
		from
		<include refid="ordertable"></include>
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="orderid!=null">
				ORDERID=#{orderid,jdbcType=VARCHAR}
			</if>
			<if test="address!=null">
				ADDRESS=#{address,jdbcType=VARCHAR}
			</if>
			<if test="time!=null">
				TIME=#{time,jdbcType=VARCHAR}
			</if>
			<if test="state!=null">
				STATE=#{state,jdbcType=VARCHAR}
			</if>
			<if test="userid!=null">
				USERID=#{userid,jdbcType=VARCHAR}
			</if>
			<if test="cid!=null">
				CID=#{cid,jdbcType=VARCHAR}
			</if>
		</trim>
	</select>
	<!-- 添加 -->
	<insert id="insert" parameterType="com.team.order.entity.Order">
		<selectKey resultType="java.lang.Integer" order="BEFORE"
			keyProperty="orderid">
			select sys_guid() from dual
		</selectKey>
		insert into
		<include refid="ordertable"></include>
		values(
		<include refid="ordervalue"></include>
		);
	</insert>
	<!-- 修改 -->
	<update id="update" parameterType="com.team.order.entity.Order">
		update
		<include refid="ordertable"></include>
		<trim prefix="set" prefixOverrides=",">
			<if test="address!=null">
				ADDRESS=#{address,jdbcType=VARCHAR},
			</if>
			<if test="state!=null">
				STATE=#{state,jdbcType=VARCHAR}
			</if>
			<if test="odescirbe!=null">
				ODESCIRBE=#{odescirbe,jdbcType=VARCHAR}
			</if>
		</trim>
		<where>
			ORDERID=#{orderid,jdbcType=VARCHAR}
		</where>
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="com.team.order.entity.Order">
		delete from
		<include refid="ordertable"></include>
		<where>
			<if test="orderid!=null">
				ORDERID=#{orderid,jdbcType=VARCHAR}
			</if>
		</where>
	</delete>
</mapper>