<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="RoleDaoMapper">
	<sql id="roletable">
		T_ROLE
	</sql>
	<sql id="rolekey">
		RID,
		RNAME,
		RDESCIRBE
	</sql>
	<sql id="rolevalue">
		#{rid},
		#{rname},
		#{rdescirbe}
	</sql>
	<!-- 查询全部 -->
	<select id="query" parameterType="com.team.role.entity.Role"
		resultType="map">
		select <![CDATA[Rownum rown]]>,
		<include refid="rolekey"></include>
		from
		<include refid="roletable"></include>
	</select>
	<!-- 条件查询 -->
	<select id="queryBy" parameterType="com.team.role.entity.Role"
		resultType="map">
		select <![CDATA[ROWNUM rown]]>,
		<include refid="rolekey"></include>
		from
		<include refid="roletable"></include>
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="rid!=null">
				RID=#{rid,jdbcType=VARCHAR}
			</if>
			<if test="rname!=null">
				RNAME=#{rname,jdbcType=VARCHAR}
			</if>
			<if test="rdescirbe!=null">
				RDESCIRBE=#{rdescirbe,jdbcType=VARCHAR}
			</if>
		</trim>
	</select>
	<!-- 添加 -->
	<insert id="insert" parameterType="com.team.role.entity.Role">
		<selectKey resultType="java.lang.Integer" order="BEFORE"
			keyProperty="rid">
			select sys_guid() from dual
		</selectKey>
		insert into
		<include refid="roletable"></include>
		values(
		<include refid="rolevalue"></include>
		);
	</insert>
	<!-- 修改 -->
	<update id="update" parameterType="com.team.role.entity.Role">
		update
		<include refid="roletable"></include>
		<trim prefix="set" prefixOverrides=",">
			<if test="rname!=null">
				RNAME=#{rname,jdbcType=VARCHAR},
			</if>
			<if test="rdescirbe!=null">
				RDESCIRBE=#{rdescirbe,jdbcType=VARCHAR}
			</if>
		</trim>
		<where>
			RID=#{rid,jdbcType=VARCHAR}
		</where>
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="com.team.role.entity.Role">
		delete from
		<include refid="roletable"></include>
		<where>
			<if test="rid!=null">
				RID=#{rid,jdbcType=VARCHAR}
			</if>
		</where>
	</delete>
</mapper>