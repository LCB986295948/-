<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="GoodsDaoMapper">
	<sql id="goodstable">
		T_GOODS
	</sql>
	<sql id="goodskey">
		GID,
		GNAME,
		GPRICE,
		GGENRE,
		GDESCIRBE
	</sql>
	<sql id="goodsvalue">
		#{gid},
		#{gname},
		#{gprice},
		#{ggenre},
		#{gdesciber}
	</sql>
	<!-- 查询全部 -->
	<select id="query" parameterType="com.team.goods.entity.Goods"
		resultType="map">
		select <![CDATA[Rownum rown]]>,
		<include refid="goodskey"></include>
		from
		<include refid="goodstable"></include>
	</select>
	<!-- 条件查询 -->
	<select id="queryBy" parameterType="com.team.goods.entity.Goods"
		resultType="map">
		select <![CDATA[ROWNUM rown]]>,
		<include refid="goodskey"></include>
		from
		<include refid="goodstable"></include>
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="gid!=null">
				GID=#{gid,jdbcType=VARCHAR}
			</if>
			<if test="gname!=null">
				GNAME=#{gname,jdbcType=VARCHAR}
			</if>
			<if test="ggenre!=null">
				GGENRE=#{ggenre,jdbcType=VARCHAR}
			</if>
		</trim>
	</select>
	<!-- 添加 -->
	<insert id="insert" parameterType="com.team.goods.entity.Goods">
		<selectKey resultType="java.lang.Integer" order="BEFORE"
			keyProperty="gid">
			select sys_guid() from dual
		</selectKey>
		insert into
		<include refid="goodstable"></include>
		values(
		<include refid="goodsvalue"></include>
		);
	</insert>
	<!-- 修改 -->
	<update id="update" parameterType="com.team.goods.entity.Goods">
		update
		<include refid="goodstable"></include>
		<trim prefix="set" prefixOverrides=",">
			<if test="gname!=null">
				GNAME=#{gname,jdbcType=VARCHAR},
			</if>
			<if test="gprice!=null">
				GPRICE=#{gprice,jdbcType=VARCHAR}
			</if>
			<if test="ggenre!=null">
				GGENRE=#{ggenre,jdbcType=VARCHAR}
			</if>
			<if test="gdesciber!=null">
				GDESCIRBE=#{gdesciber,jdbcType=VARCHAR}
			</if>
		</trim>
		<where>
			GID=#{gid,jdbcType=VARCHAR}
		</where>
	</update>
	<!-- 删除 -->
	<delete id="delete" parameterType="com.team.goods.entity.Goods">
		delete from
		<include refid="goodstable"></include>
		<where>
			<if test="gid!=null">
				GID=#{gid,jdbcType=VARCHAR}
			</if>
		</where>
	</delete>
</mapper>